extends ../layouts/users/skeleton

block content
    div( class = "row d-flex justify-content-center mid-field")
        div( class = "col-md-6" )
            form( action="register" method="POST")
                h1(class="text-primary") #{title}
                div( class="row" )
                    div(class="col-md-6")
                        input( type = "text" class = "form-control"     placeholder="First Name"    name="first_name"  required)
                    div(class="col-md-6")
                        input( type = "text" class = "form-control"     placeholder="Last Name"     name="last_name"   required)

                input( type = "text"        class = "form-control"         placeholder="Phone Number"  name = "phone_number"    required)            
                input( type = "email"       class = "form-control"         placeholder="Email Address" name = "email_address"   required)
                input( type = "password"    class = "form-control"         placeholder="Password"      name = "password"        required)
                div( class="row flex-row-reverse" )
                    div(class="col-md-3")
                        button( type="reset"  class="form-control btn btn-secondary") Clear
                    div(class="col-md-3")
                        button( type="submit" class="form-control btn btn-success") Enter
                    hr
                div( class="row flex-row-reverse" )
                    a(href="/")
                        span( class = "badge badge-primary b0 mr-3 p-2" ) Sign In Here